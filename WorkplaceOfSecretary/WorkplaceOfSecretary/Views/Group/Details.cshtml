@model WorkplaceOfSecretary.Models.Group

@{
    ViewBag.Title = "Details";
}

<h2>Информация о группе</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Специальность:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Specialty.NameOfSpecialty)
        </dd>

        <dt>
            @Html.DisplayName("Номер группы:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NumberOfGroup)
        </dd>

        <dt>
            @Html.DisplayName("Консультанты:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ComissionMembers)
        </dd>
        <dt>
            @Html.DisplayName("Студенты")
        </dt>
        <dd>
            <table class="table">
                <tr>
                    <th>Фамилия</th>
                    <th>Имя</th>
                    <th>Отчество</th>
                    <th>Средний балл</th>
                    <th>Иностранец</th>
                </tr>
                @foreach (var item in Model.Students)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Patronymic)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AverageScore)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Foreigner)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("К списку групп", "Index", "Group", null, new { @class = "btn btn-default btn-radius" })
    @Html.ActionLink("Редактировать", "Edit", "Group", new { id = Model.ID }, new { @class = "btn btn-default btn-radius" })
</p>
