@model IEnumerable<WorkplaceOfSecretary.Models.Student>

@{
    ViewBag.Title = "Index";
}

<h2>Список студентов</h2>

<p>
    @Html.ActionLink("Добавить студента", "Create", "Student", null, new { @class = "btn btn-success btn-radius" })
</p>
<form method="get">
    <div class="form-inline">
        <label class="control-label">Группа: </label>
        @Html.DropDownList("GroupID", ViewBag.GroupID as SelectList,
                    htmlAttributes: new { @class = "form-control" })
        <input type="submit" value="Поиск" class="btn btn-default" />
    </div>
</form>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Номер группы")
        </th>
        <th>
            @Html.DisplayName("Фамилия")
        </th>
        <th>
            @Html.DisplayName("Имя")
        </th>
        <th>
            @Html.DisplayName("Отчество")
        </th>
        <th>
            @Html.DisplayName("Средний балл")
        </th>
        <th>
            @Html.DisplayName("Иностранец")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Group.NumberOfGroup)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patronymic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AverageScore)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Foreigner)
            </td>
            <td>
                @Html.ActionLink("Изменить", "Edit", "Student", new { id = item.ID }, new { @class = "btn btn-default btn-radius" })
                @Html.ActionLink("Подробнее", "Details", "Student", new { id = item.ID }, new { @class = "btn btn-default btn-radius" })
                @Html.ActionLink("Удалить", "Delete", "Student", new { id = item.ID }, new { @class = "btn btn-danger btn-radius" })
            </td>
        </tr>
    }

</table>
