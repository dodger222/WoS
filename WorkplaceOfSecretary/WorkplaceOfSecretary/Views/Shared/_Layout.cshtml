<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Рабочее место секретаря ГЭК</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
            @Html.ActionLink("Рабочее место секретаря ГЭК", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
    </div>
    <div class="row panel">
        <div class="col-xs-2">
            @Html.ActionLink("На главную", "Index", "Home", null, new { @class = "btn btn-block btn-default btn-lg" })
            @Html.ActionLink("Группы", "Index", "Group", null, new { @class = "btn btn-block btn-default btn-lg" })
            @Html.ActionLink("Студенты", "Index", "Student", null, new { @class = "btn btn-block btn-default btn-lg" })
            @Html.ActionLink("Преподаватели", "Index", "Employee", null, new { @class = "btn btn-block btn-default btn-lg" })
            @Html.ActionLink("ГЭКи", "Index", "SEB", null, new { @class = "btn btn-block btn-default btn-lg" })
            @Html.ActionLink("Заседания", "Index", "Meeting", null, new { @class = "btn btn-block btn-default btn-lg" })
            @Html.ActionLink("Комиссии", "Index", "Committee", null, new { @class = "btn btn-block btn-default btn-lg" })
            @Html.ActionLink("Протоколы", "Index", "Protocol", null, new { @class = "btn btn-block btn-default btn-lg" })
            @Html.ActionLink("Создать протокол", "Create", "DataForDPProtocol", null, new { @class = "btn btn-block btn-default btn-lg" })
            @Html.ActionLink("Создать список", "Create", "DataForList", null, new { @class = "btn btn-block btn-default btn-lg" })
        </div>
        <div class="col-xs-8">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Рабочее место секретаря ГЭК</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
